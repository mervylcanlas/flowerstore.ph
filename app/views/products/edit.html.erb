<h1>New Product</h1>

<%= form_with model: @product do |form| %>
  <div>
    <%= form.label :product_name %><br>
    <%= form.text_field :product_name %>
  </div>

  <div>
    <%= form.label :product_description %><br>
    <%= form.text_field :product_description %>
  </div>

  <div>
    <%= form.label :quantity %><br>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price, step: :any %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ["Inactive", "Active"] %>
  </div>

 <br>

  <div>
    <%= form.submit 'Update' %>
  </div>
<% end %>